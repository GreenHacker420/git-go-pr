---
import Layout from '../layouts/Layout.astro'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
---

<Layout title="Hacktoberfest 2025 Dashboard">
  <Fragment slot="navbar">
    <Navbar />
  </Fragment>
  <main
    class="min-h-screen bg-gradient-to-br from-black via-gray-900 to-green-900 font-mono">
    <section class="relative text-white py-24 overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <h1
          class="text-6xl md:text-7xl font-black mb-6 bg-gradient-to-r from-green-400 to-lime-300 bg-clip-text text-transparent">
          404 - Page Not Found
        </h1>
        <p class="text-xl mb-10 max-w-3xl mx-auto leading-relaxed opacity-90 text-gray-300">
          Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="/" class="group bg-gradient-to-r from-green-500 to-lime-400 text-black px-10 py-4 rounded-xl font-bold text-lg hover:from-green-600 hover:to-lime-500 transform hover:scale-105 transition-all duration-300 shadow-xl hover:shadow-green-500/25">
            <span class="flex items-center gap-2">
              Go Back Home
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </span>
          </a>
        </div>
      </div>
    </section>
  </main>
  <Fragment slot="footer">
    <Footer />
  </Fragment>
</Layout>
