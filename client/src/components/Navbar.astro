<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', function() {
      mobileMenu?.classList.toggle('hidden');
    });
  });
</script>

<script>
  async function renderAuthArea() {
    const authArea = document.getElementById('auth-area');
    const loginLinks = document.querySelectorAll('a[href="/login"]');
    
    try {
      const API_BASE = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';
      const res = await fetch(`${API_BASE}/auth/me`, { credentials: 'include' });
      if (res.ok) {
        const data = await res.json();
        if (data.authenticated && data.user) {
          // Hide login links
          loginLinks.forEach(link => link.style.display = 'none');
          // Show user info and logout
          authArea.innerHTML = `
            <span class="text-green-100 text-sm mr-3">@${data.user.username || data.user.login || data.user.displayName}</span>
            <a href="${API_BASE}/auth/logout" class="bg-red-600 hover:bg-red-500 text-white px-3 py-1 rounded-md text-sm">Sign out</a>
          `;
        } else {
          // Show login links
          loginLinks.forEach(link => link.style.display = '');
          authArea.innerHTML = '';
        }
      } else {
        // Show login links
        loginLinks.forEach(link => link.style.display = '');
        authArea.innerHTML = '';
      }
    } catch (err) {
      console.warn('Auth fetch failed', err);
      // Show login links on error
      loginLinks.forEach(link => link.style.display = '');
      authArea.innerHTML = '';
    }
  }

  renderAuthArea();
</script>