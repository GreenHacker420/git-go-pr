---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

// API Configuration
const API_BASE_URL = "http://localhost:8000";

// Fetch leaderboard data from backend
let leaderboard: LeaderboardEntry[] = [];
let error: string | null = null;

try {
  const res = await fetch(`${API_BASE_URL}/leaderboard`);
  if (res.ok) {
    leaderboard = await res.json();
  } else {
    error = `API Error: ${res.status} ${res.statusText}`;
  }
} catch (err) {
  error = `Connection Error: Unable to connect to backend server at ${API_BASE_URL}`;
  console.error("API fetch error:", err);
}

type LeaderboardEntry = {
  name: string;
  github_user: string;
  pr_count: number;
};
---

<Layout title="Leaderboard - Hacktoberfest 2025">
  <Fragment slot="navbar">
    <Navbar />
  </Fragment>

  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4 font-mono">Leaderboard</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto font-mono">
          See who's leading the pack in Hacktoberfest 2025 contributions
        </p>
      </div>

      {error && (
        <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-8">
          <h3 class="text-red-800 font-semibold font-mono mb-2">Backend Connection Error</h3>
          <p class="text-red-700 font-mono text-sm">{error}</p>
          <p class="text-red-600 font-mono text-xs mt-2">
            Make sure the backend server is running on port 8000.
          </p>
        </div>
      )}

      <!-- Podium Section -->
      <div class="mb-16 text-center">
        {!error && leaderboard.length >= 3 ? (
          <div class="flex justify-center items-end space-x-8 mb-8">
            <!-- 2nd Place -->
            <div class="bg-gray-100 rounded-lg p-6 w-32 h-40 flex flex-col items-center justify-between">
              <div class="text-center">
                <h3 class="font-bold text-lg font-mono">{leaderboard[1]?.name}</h3>
                <p class="text-sm text-gray-600 font-mono">@{leaderboard[1]?.github_user}</p>
                <p class="text-xl font-bold text-gray-700 font-mono">{leaderboard[1]?.pr_count} PRs</p>
              </div>
              <div class="text-2xl font-bold text-gray-500 font-mono">ðŸ¥ˆ</div>
            </div>
            
            <!-- 1st Place -->
            <div class="bg-yellow-100 rounded-lg p-6 w-32 h-48 flex flex-col items-center justify-between">
              <div class="text-center">
                <h3 class="font-bold text-lg font-mono">{leaderboard[0]?.name}</h3>
                <p class="text-sm text-gray-600 font-mono">@{leaderboard[0]?.github_user}</p>
                <p class="text-xl font-bold text-yellow-700 font-mono">{leaderboard[0]?.pr_count} PRs</p>
              </div>
              <div class="text-3xl font-bold text-yellow-600 font-mono">ðŸ‘‘</div>
            </div>
            
            <!-- 3rd Place -->
            <div class="bg-orange-100 rounded-lg p-6 w-32 h-36 flex flex-col items-center justify-between">
              <div class="text-center">
                <h3 class="font-bold text-lg font-mono">{leaderboard[2]?.name}</h3>
                <p class="text-sm text-gray-600 font-mono">@{leaderboard[2]?.github_user}</p>
                <p class="text-xl font-bold text-orange-700 font-mono">{leaderboard[2]?.pr_count} PRs</p>
              </div>
              <div class="text-2xl font-bold text-orange-500 font-mono">ðŸ¥‰</div>
            </div>
          </div>
        ) : !error && (
          <div class="bg-gray-50 rounded-lg p-16">
            <h3 class="text-2xl font-bold text-gray-900 mb-4 font-mono">No Rankings Yet</h3>
            <p class="text-gray-600 mb-8 max-w-md mx-auto font-mono">
              The leaderboard will populate once contributors start making contributions.
            </p>
            <div class="flex justify-center space-x-8">
              <!-- Placeholder podium -->
              <div class="bg-gray-200 rounded-lg p-6 w-24 h-32 flex flex-col items-center justify-end font-mono">
                <div class="text-xs text-gray-500">2nd</div>
              </div>
              <div class="bg-yellow-200 rounded-lg p-6 w-24 h-40 flex flex-col items-center justify-end font-mono">
                <div class="text-xs text-gray-600">1st</div>
              </div>
              <div class="bg-orange-200 rounded-lg p-6 w-24 h-28 flex flex-col items-center justify-end font-mono">
                <div class="text-xs text-gray-500">3rd</div>
              </div>
            </div>
          </div>
        )}
      </div>


      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="px-6 py-4 bg-green-600 text-white">
          <h2 class="text-xl font-semibold font-mono">Full Rankings</h2>
        </div>
        
        {!error && leaderboard.length > 0 ? (
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider font-mono">Rank</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider font-mono">Name</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider font-mono">GitHub</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider font-mono">PRs</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider font-mono">Badge</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                {leaderboard.map((entry, index) => (
                  <tr class={index < 3 ? 'bg-yellow-50' : ''}>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 font-mono">
                      #{index + 1}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-mono">
                      {entry.name}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">
                      <a href={`https://github.com/${entry.github_user}`} 
                         target="_blank" 
                         class="text-blue-600 hover:text-blue-800 underline">
                        @{entry.github_user}
                      </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 font-mono">
                      {entry.pr_count}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {index === 0 && <span class="text-2xl">ðŸ‘‘</span>}
                      {index === 1 && <span class="text-xl">ðŸ¥ˆ</span>}
                      {index === 2 && <span class="text-xl">ðŸ¥‰</span>}
                      {entry.pr_count >= 4 && <span class="text-lg">ðŸŽ¯</span>}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : !error && (
          <div class="text-center py-16">
            <h3 class="text-xl font-bold text-gray-900 mb-4 font-mono">Leaderboard Coming Soon</h3>
            <p class="text-gray-600 mb-8 max-w-md mx-auto font-mono">
              Once contributors start participating, you'll see detailed rankings here.
            </p>
            <a href="/register" 
               class="inline-block bg-green-600 text-white px-8 py-3 rounded-lg hover:bg-green-700 transition-colors font-semibold font-mono">
              Register to Participate
            </a>
          </div>
        )}
      </div>

      <!-- Points System -->
      <div class="mt-12 bg-gray-50 rounded-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center font-mono">How Points Are Calculated</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <h3 class="font-semibold text-lg font-mono">Pull Requests</h3>
            <p class="text-gray-600 font-mono">10 points each</p>
          </div>
          <div class="text-center">
            <h3 class="font-semibold text-lg font-mono">Issues Resolved</h3>
            <p class="text-gray-600 font-mono">5 points each</p>
          </div>
          <div class="text-center">
            <h3 class="font-semibold text-lg  font-mono">Quality Bonus</h3>
            <p class="text-gray-600 font-mono">Extra points for exceptional contributions</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Fragment slot="footer">
    <Footer />
  </Fragment>
</Layout>