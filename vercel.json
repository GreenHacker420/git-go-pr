{
  "version": 2,
  "buildCommand": "npm run build:client",
  "outputDirectory": "packages/client/dist",
  "functions": {
    "api/bridge.mjs": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api", "destination": "/api/bridge?path=" },
    { "source": "/api/:path*", "destination": "/api/bridge?path=:path*" }
  ]
}
